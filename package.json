  },
  "scripts": {
    "build": "webpack --config _develop/webpack.config.js --devtool hidden-source-map",
    "syncfork": "git pull git@github.com:quilljs/quill.git develop",
    "start": "npm run build; foreman start -f _develop/procfile",
